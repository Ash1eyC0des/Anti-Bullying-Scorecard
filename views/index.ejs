				<div class="bg_color_1">
					<div class="container margin_60">
						<div class="main_title_3">
							<h2>Latest Scorecards</h2>
							<p>See what other parents are saying.</p>
							<a href="reviews-page.html">View all</a>
						</div>

						<div id="reccomended" class="owl-carousel owl-theme">
							<% scorecards.forEach((scorecard, i) => { %>
							<div class="item">
								<div class="review_listing">
									<div class="clearfix">
										<figure><img src="/img/avatar1.jpg" alt=""></figure>
										<span class="rating">
											<% for(let i = 1; i <= 5; i++) { %>
												<% if (i <= scorecard.rating) { %>
													<i class="icon_star"></i>
												<% } else { %>
													<i class="icon_star empty"></i>
												<% } %>
											<% } %>
									<em><%= scorecard.rating %>/5</em>
										</span>
										<!-- <small>Shops</small> -->
									</div>
									<h3 class="review_heading"><strong><%= scorecardUsers[i] %></strong><br>reviewed <a href="/schools/<%= scorecard.school._id %>"><%= scorecardSchools[i] %></a></h3>
									<h4 class="review_title"><%= scorecard.title %></h4>
									<p><%= scorecard.review.slice(0, 200) %>...</p>
									<ul class="clearfix">
										<li><small>Published: <%= scorecard.date.toLocaleDateString("en-US") %></small></li>
										<li><a href="/schools/<%= scorecard.school._id %>#<%= scorecard._id %>" class="btn_1 small">Read Full Review</a></li>
									</ul>
								</div>
							</div>
							<% }) %>
